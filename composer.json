{
    "name": "jubianchi/BehatViewer",
    "description": "Behat report viewer",

    "authors": [
        {
            "name": "jubianchi",
            "email": "contact@jubianchi.fr"
        }
    ],

    "minimum-stability": "dev",

    "require": {
        "php":                                  ">=5.3.3",

        "symfony/framework-bundle":             "v2.0.16",
        "symfony/assetic-bundle":               "2.0.x-dev",
        "symfony/twig-bundle":                  "2.0.x-dev",

        "twig/twig":                            "1.8.3",
        "twig/extensions":                      "dev-master",

        "sensio/distribution-bundle":           "2.0.x-dev",
        "sensio/generator-bundle":              "2.0.x-dev",
        "sensio/framework-extra-bundle":        "2.0.x-dev",

        "doctrine/common":                      "2.1.4",
        "doctrine/dbal":                        "2.1.7",
        "doctrine/orm":                         "2.1.7",

        "jms/metadata":                         "1.1.1",
        "jms/security-extra-bundle":            "1.0.x-dev",

        "monolog/monolog":                      "1.0.2",
        "swiftmailer/swiftmailer":              "4.1.7",
        "kriswallsmith/assetic":                "1.0.x-dev",
        "friendsofsymfony/jsrouting-bundle":    "dev-master",
        "knplabs/knp-markdown-bundle":          "dev-composer"
    },

    "require-dev": {
        "behat/behat":                          "v2.4.0",
        "behat/gherkin":                        "v2.2.1",
        "behat/mink":                           "v1.4.0",
        "behat/mink-extension":                 "dev-master",
        "behat/mink-goutte-driver":             "dev-master",
        "behat/mink-browserkit-driver":         "v1.0.0",
        "behat/symfony2-extension":             "v1.0.0"
    },

    "autoload": {
        "psr-0": {
            "jubianchi": "src/"
        }
    }
}
