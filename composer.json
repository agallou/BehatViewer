{
    "name": "jubianchi/BehatViewer",
    "description": "Behat report viewer",

    "authors": [
        {
            "name": "jubianchi",
            "email": "contact@jubianchi.fr"
        }
    ],

    "minimum-stability": "dev",

    "require": {
        "php":                                  ">=5.3.3",

        "symfony/symfony":                      ">=2.0.7,<2.1.0-dev",
        "doctrine/orm":                         ">=2.1.0,<2.2.0-dev",
        "twig/extensions":                      "*",

        "symfony/assetic-bundle":               "*",
        "sensio/generator-bundle":              "*",
        "sensio/framework-extra-bundle":        "2.0.x-dev",
        "sensio/distribution-bundle":           "2.0.x-dev",
        "jms/security-extra-bundle":            "1.0.x-dev",

        "friendsofsymfony/jsrouting-bundle":    "dev-master",
        "knplabs/knp-markdown-bundle":          "dev-composer",
        "jubianchi/behat-viewer-extension":     "*"
    },

    "require-dev": {
        "behat/behat":                          "v2.4.0",
        "behat/gherkin":                        "v2.2.1",
        "behat/mink":                           "v1.4.0",
        "behat/mink-extension":                 "dev-master",
        "behat/mink-goutte-driver":             "dev-master",
        "behat/mink-browserkit-driver":         "v1.0.0",
        "behat/symfony2-extension":             "v1.0.0"
    },

    "autoload": {
        "psr-0": {
            "jubianchi": "src/"
        }
    }
}
