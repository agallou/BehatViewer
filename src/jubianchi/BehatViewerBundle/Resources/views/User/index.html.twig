{% extends 'BehatViewerBundle::layout.html.twig' %}

{% block container %}
<form action="{{ path('behatviewer.logincheck') }}" method="post" class="form-horizontal">
    <div style="background-color: #888; border: none;" class="well modal-example">
        <div style="position: relative; top: auto; left: auto; margin: 0 auto; z-index: 1; max-width: 100%;" class="modal">
            <div class="modal-header">
                <h3>Login</h3>
            </div>
            <div class="modal-body">
                {% if error %}
                    <div class="alert alert-block alert-error">{{ error.message }}</div>
                {% endif %}

                <div class="control-group">
                    <label class="control-label" for="username">Username</label>
                    <div class="controls">
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="input-xlarge" />
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="password">Password</label>
                    <div class="controls">
                        <input type="password" id="password" name="_password" class="input-xlarge" />
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="remember_me">Keep me logged in</label>
                    <div class="controls">
                        <input type="checkbox" id="remember_me" name="_remember_me" checked />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="submit" class="btn btn-primary" value="Log in" />
            </div>
        </div>
    </div>
</form>
{% endblock %}

{% block javascript %}
    <script type="text/javascript">
        JSC.require(
            ['behat-viewer/login'],
            function() {
                $(function() {
                    app.controller.current(new LoginController('#container'));
                });
            }
        );
    </script>
{% endblock %}
