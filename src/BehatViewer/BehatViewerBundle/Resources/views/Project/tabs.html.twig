{% set route = app.request.get('_route') %}

<ul class="nav nav-tabs">
    <li{% if route == 'behatviewer.project.edit' %} class="active"{% endif %}><a href="{{ path("behatviewer.project.edit", {"project": project.slug, "username": project.user.username }) }}">Infos</a></li>

    {% if is_granted('ROLE_PREMIUM') %}
        <li{% if route == 'behatviewer.project.edit.repository' %} class="active"{% endif %}><a href="{{ path("behatviewer.project.edit.repository", {"project": project.slug, "username": project.user.username }) }}">Repository</a></li>

        {% if project.strategy is not null %}
            <li{% if route == 'behatviewer.project.edit.script' %} class="active"{% endif %}><a href="{{ path("behatviewer.project.edit.script", {"project": project.slug, "username": project.user.username }) }}">Script</a></li>
        {% endif %}
    {% endif %}
</ul>
