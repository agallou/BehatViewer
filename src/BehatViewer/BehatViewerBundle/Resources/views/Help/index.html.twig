{% extends 'BehatViewerUiBundle::layout.sidebar.html.twig' %}

{% block sidebar %}
    <div class="well sidebar-nav">
        <ul class="nav nav-list">
            {% for url, section in sections %}
                <li class="nav-header">{{ section['label'] }}</li>

                {% for link, page in section['links'] %}
                    <li>
                        <a href="{{ path('behatviewer.help', {'section': url, 'page': page }) }}">
                            {{ link }}
                        </a>
                    </li>
                {% endfor %}
            {% endfor %}
        </ul>
    </div>
{% endblock %}

{% block content %}
    {{ help|markdown }}
{% endblock %}

{% block javascript %}
    <script type="text/javascript">
        JSC.require(
            'behat-viewer/help',
            function() {
                $(function() {
                    app.controller.current(new HelpController('#container'));
                });
            }
        );
    </script>
{% endblock %}
